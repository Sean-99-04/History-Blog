{{> _addArticle}}
{{#if logged}}
    {{#each articles}}
        {{> _deleteArticle}}
        <div class="article">
            <div class="article__left">
                <div class="article__left__author">posted by "{{this.author}}"</div>
                <div class="article__left__profile"></div>
            </div>
            <div class="article__right">
                <div class="article__right__top">
                    <div class="article__right__top__title">{{this.title}}</div>
                    <p class="article__right__top__content">{{this.content}}</p>
                </div>
                <div class="article__right__bottom">
                    <div class="article__right__bottom__group">
                        <p class="article__right__bottom__group__label">posted on:</p>
                        <p class="article__right__bottom__group__content"> {{this.createdAt}}</p>
                    </div>
                    <div class="article__right__bottom__group">
                        <p class="article__right__bottom__group__label">Sources:</p>
                        <p class="article__right__bottom__group__content">{{this.sources}}</p>
                    </div>
                    <div class="article__right__bottom__group">
                        <p class="article__right__bottom__group__label">Tags:</p>
                        <p class="article__right__bottom__group__content">{{this.tags}}</p>
                    </div>
                    <div class="article__right__bottom__group--space-around">
                        <a href="/editArticle/{{this._id}}" class="article__right__bottom__group__btn">Edit</a>
                        <form action="/deleteArticle/{{this._id}}?_method=DELETE" method="POST">
                            <button class="article__right__bottom__group__btn deleteArticle" id="{{@index}}">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

