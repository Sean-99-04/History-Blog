<button id="signup" class="btn btn-primary m-1">Sign Up</button>
<button id="login" class="btn btn-secondary m-1">Login</button>

<div class="my-form__container" id="signupFormContainer">
    <form action="/register" method="POST" class="my-form" id="signupForm">
        <div class="m-4">
            <label for="nameSignup" class="form-label text-dark">Name: </label>
            <input type="text" id="nameSignup" name="name" placeholder="name" required="true" class="form-control"/>
        </div>
        <div class="m-4">
            <label for="emailSignup" class="form-label">Email: </label>
            <input type="email" id="emailSignup" name="email" placeholder="email" required="true" class="form-control" />
        </div>
        <div class="m-4">
            <label for="passwordSignup" class="form-label">Password: </label>
            <input type="password" id="passwordSignup" name="password" placeholder="password" required="true" class="form-control" />
        </div>
        <div class="m-4">
            <input type="submit" value="Sign Up" class="btn btn-primary">
        </div>
    </form>
</div>

<div class="my-form__container" id="loginFormContainer">
    <form action="/login" method="POST" class="my-form" id="loginForm">
        <div class="m-3">
            <label for="emailLogin" class="form-label">Email: </label>
            <input type="text" id="emailLogin" name="email" placeholder="email" required="true" class="form-control"  value="s@s"/>
        </div>
        <div class="m-3">
            <label for="passwordLogin" class="form-label">Password: </label>
            <input type="password" id="passwordLogin" name="password" placeholder="password" required="true" class="form-control"  value="s"/>
        </div>
        <div class="m-4">
            <input type="submit" value="Login" class="btn btn-primary">
        </div>
    </form>
</div>
